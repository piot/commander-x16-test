{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Clean Build Artifacts",
			"type": "shell",
			"command": "rm",
			"args": [
				"-f",
				"${fileBasenameNoExtension}.prg",
				"${fileBasenameNoExtension}.dbg",
				"${fileBasenameNoExtension}.fdb"
			],
			"problemMatcher": []
		},
		{
			"label": "Assemble File",
			"type": "shell",
			"command": "ca65",
			"args": [
				"${file}",
				"-g",
				"-o", "${fileBasenameNoExtension}.o",
				"-t", "cx16"
			],
			"group": "build",
			"dependsOn": "Clean Build Artifacts",
			"problemMatcher": {
				"owner": "ca65",
				"fileLocation": ["absolute"],
				"pattern": {
					"regexp": "^([^\\s].*)\\((\\d+),(\\d+)\\):\\s+(warning|error):\\s+(.*)$",
					"file": 1,
					"line": 2,
					"column": 3,
					"severity": 4,
					"message": 5
				}
			}
		},
		{
			"label": "Link ROM",
			"type": "shell",
			"command": "ld65",
			"args": [
				"-C", "cx16.cfg",
				"-o", "${fileBasenameNoExtension}.prg",
				"--dbgfile", "${fileBasenameNoExtension}.dbg",
				"${fileBasenameNoExtension}.o"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"dependsOn": "Assemble File",
			"problemMatcher": {
				"owner": "ld65",
				"fileLocation": ["absolute"],
				"pattern": {
					"regexp": "^([^\\s].*)\\((\\d+),(\\d+)\\):\\s+(warning|error):\\s+(.*)$",
					"file": 1,
					"line": 2,
					"column": 3,
					"severity": 4,
					"message": 5
				}
			}
	}]
}
